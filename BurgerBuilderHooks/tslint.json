{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended", "tslint-react"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    },
    "jsRules": {},
    "rules": {
        "eofline": false,
        "no-trailing-whitespace": false,
        "comment-format": false,
        "no-console": false,
        "one-line": false,
        "no-consecutive-blank-lines": false,
        "curly": false,
        "ban": [
            true,
            ["*", "bind", "Function binding is not allowed, use arrow functions instead."],
            ["moment", "locale", "Do not set moment locale globally! Use moment().locale(...), not moment.locale(...)"]
        ],
        "linebreak-style": [true, "CRLF"],
        "jsdoc-format": [true, "check-multiline-start"],
        "max-line-length": [true, 150],
        "no-duplicate-variable": true,
        "no-invalid-this": true,
        "quotemark": [true, "double", "jsx-double", "avoid-template", "avoid-escape"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "variable-name": [true, "ban-keywords"],
        "jsx-no-lambda": false,
        "whitespace": [
        true,
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type",
        "check-module",
        "check-rest-spread",
        "check-type-operator",
        "check-preblock"
        ],
        "member-ordering": [true, "public-before-private", "variables-before-functions"],
        "no-duplicate-switch-case": true,
        "no-duplicate-imports": true,
        "no-boolean-literal-compare": true,
        "member-access": [true, "check-accessor", "check-constructor", "check-parameter-property"],
        "prefer-object-spread": true,
        "array-type": [true, "array"],
        "no-unnecessary-qualifier": true,
        "switch-final-break": [true, "always"],
        "only-arrow-functions": false,
        "prefer-readonly": true,
        "prefer-while": true,
        "function-constructor": true,
        "unnecessary-bind": true,
        "jsx-alignment": true,
        "jsx-boolean-value": true,
        "jsx-curly-spacing": [true, "never"],
        "jsx-equals-spacing": [true, "never"],
        "jsx-key": true,
        "jsx-no-bind": true,
        "jsx-no-string-ref": true,
        "jsx-self-close": true,
        "trailing-comma": false,
        "object-literal-sort-keys": false,
        "arrow-parens": false,
        "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
        "no-shadowed-variable": false,
        "interface-over-type-literal": false,
        "no-bitwise": false,
        "radix": false,
        "object-literal-key-quotes": false,
        "no-string-throw": false,
        "prefer-for-of": false,
        "object-literal-shorthand": false,
        "max-classes-per-file": false,
        "no-string-literal": false,
        "callable-types": false,
        "unified-signatures": false,
        "no-empty-interface": false,
        "no-namespace": false,
        "no-conditional-assignment": false,
        "adjacent-overload-signatures": false
    }
}